page{
  display: flex;
  height: 100%;
  width: 100%;
}
.mainContent{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.bottomBlock{
  display: flex;
  flex: 1;
  overflow: auto;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.usermotto {
  margin-top: 200px;
}

image {
  width: 150rpx;
  height: 150rpx;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}
.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.time-big {
  font-size: 50rpx;
  margin: 20rpx;
}
.time-small {
  font-size: 20rpx;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}
.page-body-button {
  width: 250rpx;
  text-align: center;
}
.button-stop-record {
  width: 100rpx;
  height: 100rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  border-radius: 120rpx;
  margin: 0 auto;
}

.foot{
  line-height: 50rpx;
  flex:0 0 100rpx;
}

.mask-view {
  width: 100%;
  height: 100%;
  position: fixed;
  overflow: hidden;
  background-color: #ffffff;
  z-index: 999;
  top: 0;
  left: 0;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.adv1{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-size: contain;
}
.goodbutton {
  margin-top: 5px;
  width: 400rpx;
  background-color: rgb(252, 126, 67);
  color: white;
  border-radius: 98rpx;
  background: bg_red;
}

/* 按下变颜色 */

.hover {
  background:  rgb(236, 179, 156);
}

.ScrollView {
  margin-top: 140rpx;
  margin-left: 3rpx;
  margin-right: 2rpx;
}